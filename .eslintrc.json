		"restoreLesson": "readonly",
		"serializeAction": "readonly",
		"showCompetenceSubview": "readonly",
		"showdown": "readonly",
		"showGroupSubview": "readonly",
		"showImageSubview": "readonly",
		"showLessonAddView": "readonly",
		"showLessonEditor": "readonly",
		"showLessonEditView": "readonly",
		"showLessonRestoreView": "readonly",
