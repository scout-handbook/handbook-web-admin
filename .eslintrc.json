{
	"parserOptions": {
		"project": "./tsconfig.json",
		"ecmaVersion": 3,
		"sourceType": "script"
	},
	"env": {
		"browser": true,
		"node": false
	},
	"plugins": [
		"compat",
		"@typescript-eslint"
	],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:@typescript-eslint/recommended-requiring-type-checking",
		"plugin:prettier/recommended"
	],
	"rules": {
		"compat/compat": "warn",
		"no-warning-comments": "warn",
		"strict": ["error", "never"],
		"@typescript-eslint/array-type": ["error", {"default": "generic"}],
		"@typescript-eslint/indent": ["error", "tab"],
		"@typescript-eslint/member-ordering": "error",
		"@typescript-eslint/no-extraneous-class": "error",
		"@typescript-eslint/no-namespace": ["error", {"allowDeclarations": true}],
		"@typescript-eslint/no-non-null-assertion": "off"
	},
	"overrides": [
		{
			"files": ["gulpfile.js"],
			"rules": {
				"@typescript-eslint/no-unsafe-assignment": "off",
				"@typescript-eslint/no-unsafe-call": "off",
				"@typescript-eslint/no-unsafe-member-access": "off",
				"@typescript-eslint/no-unsafe-return": "off",
				"@typescript-eslint/no-var-requires": "off",
				"@typescript-eslint/restrict-plus-operands": "off"
			}
		}
	],
	"globals": {
		"COMPETENCES": "readonly",
		"CONFIG": "readonly",
		"FIELDS": "readonly",
		"GROUPS": "readonly",
		"LESSONS": "readonly",
		"LOGINSTATE": "readonly",
		"Action": "readonly",
		"ActionCallback": "readonly",
		"ActionQueue": "readonly",
		"ActionQueueRetry": "readonly",
		"ActionQueueSetup": "readonly",
		"addCompetence": "readonly",
		"addField": "readonly",
		"addGroup": "readonly",
		"addImage": "readonly",
		"addLessonInFieldOnClick": "readonly",
		"addOnClicks": "readonly",
		"AfterLoadEvent": "readonly",
		"authFailHandler": "readonly",
		"changeCompetenceOnClick": "readonly",
		"changed": "writable",
		"changeField": "readonly",
		"changeFieldOnClick": "readonly",
		"changeGroupOnClick": "readonly",
		"changeLessonCompetencesOnClick": "readonly",
		"changeLessonFieldOnClick": "readonly",
		"changeLessonGroupsOnClick": "readonly",
		"changeUserGroupsOnClick": "readonly",
		"changeUserRoleOnClick": "readonly",
		"closeSidePanelImageSelector": "readonly",
		"defaultBody": "readonly",
		"defaultName": "readonly",
		"deleteCompetenceOnClick": "readonly",
		"deleteFieldOnClick": "readonly",
		"deleteGroupOnClick": "readonly",
		"deleteImageOnClick": "readonly",
		"deleteLessonOnClick": "readonly",
		"deserializeAction": "readonly",
		"dialog": "readonly",
		"dismissSpinner": "readonly",
		"dispatchIfChanged": "readonly",
		"EasyMDE": "readonly",
		"editor": "readonly",
		"filterXSS": "readonly",
		"getAttribute": "readonly",
		"historySetup": "readonly",
		"IDList": "readonly",
		"imageSelectorOpen": "readonly",
		"importGroupOnClick": "readonly",
		"lessonHistoryOpen": "readonly",
		"lessonSettings": "readonly",
		"lessonSettingsCache": "readonly",
		"lessonSettingsCacheEvent": "readonly",
		"mainPageTab": "readonly",
		"metadataEvent": "readonly",
		"metadataSetup": "readonly",
		"openSidePanelImageSelector": "readonly",
		"parseBoolForm": "readonly",
		"parseVersion": "readonly",
		"prepareImageSelector": "readonly",
